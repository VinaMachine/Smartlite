{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smartlite/semantic_units.v1.json",
  "title": "SemanticUnitsV1",
  "type": "object",
  "required": ["intent", "slots", "entities", "confidence"],
  "properties": {
    "intent": {"type": "string"},
    "slots": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "text", "start", "end"],
        "properties": {
          "type": {"type": "string"},
          "text": {"type": "string"},
          "start": {"type": "integer", "minimum": 0},
          "end": {"type": "integer", "minimum": 0}
        }
      }
    },
    "confidence": {"type": "number", "minimum": 0, "maximum": 1}
  },
  "additionalProperties": false,
  "examples": [
    {
      "intent": "book_flight",
      "slots": {"destination": "Hanoi", "date": "2025-12-24"},
      "entities": [{"type": "location", "text": "Hanoi", "start": 10, "end": 15}],
      "confidence": 0.93
    }
  ]
}
